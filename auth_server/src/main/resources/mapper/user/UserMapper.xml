<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcl.anth.user.mapper.UserMapper">
    <select id="listUser" resultType="user">
        select *
        from t_user
        <where>
            1=1
            <if test="userPageVo.userName!=null and userPageVo.userName!=''">
                and u_name like CONCAT('%', #{userPageVo.userName}, '%')
            </if>
            <if test="userPageVo.roleId!=null and userPageVo.roleId!=''">
                and r_id = #{userPageVo.roleId}
            </if>
        </where>
        order by create_time desc
    </select>
</mapper>